{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/",
    "rootDir": "./src/",
    "forceConsistentCasingInFileNames": true,
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "noUnusedParameters": false,
    "pretty": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2017"
    ]
  },
  "include": [
    "./src/**/*",
    "./types/**/*.d.ts"
  ]
}
